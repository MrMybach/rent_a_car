<div class="row">
	<h1>Wypożycz ten samochodu</h1>
	<h2><%= @car.car_brand %> <%= @car.car_model %></h2>
</div>
<%= link_to 'Powrót', cars_path %>
<div class="row">
	<section class="form">
		<%= simple_form_for @rent do |f| %>
		  <div class="form-group"><%= f.input :car_id, as: :hidden %></div>
		  <div class="form-group"><%= f.input :rent_from_date, as: :string %></div>
		  <div class="form-group"><%= f.input :number_of_days_rent %></div>
		  <div class="form-group"><%= f.input :client_id, collection: Client.all, label_method: :full_name %></div>
		  <div class="form-group"><%= f.button :submit, 'Zapisz' %></div>
		<% end %>
	</section>
</div>