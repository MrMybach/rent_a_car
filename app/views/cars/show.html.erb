<div class="row">
	<h1>Wypożycz ten samochód</h1>
	<h2><%= @car.car_brand %> <%= @car.car_model %></h2>
</div>
<%= link_to 'Powrót', cars_path %>
<div class="row">
	<div class="col-md-6">
		<section class="form">
			<%= simple_form_for @rent do |f| %>
			  <%= f.input :car_id, as: :hidden %>
			  <%= f.input :client_id, collection: Client.all, label_method: :full_name, placeholder: 'Klient', label: false %>
			  <%# f.input :rent_from_date, as: :string, label: 'Data rozpoczęcia' %>
			  <div class="form-group">
			  	<div class="row">
				  	<div class="col-md-4"><label class="string optional control-label" for="rent_rent_from_date">Data rozpoczęcia</label></div>
				  	<div class="col-md-8"><input type="date" class="form-control" name="rent[rent_from_date]" value="<%= @rent.rent_from_date %>"></div>
				  </div>
				  
				</div>
			  <%= f.input :number_of_days_rent, label: false, collection: 2..7, default: '-' %>
			  <%= f.button :submit, 'Zapisz' %>
			<% end %>
		</section>
	</div>
</div>

